{
  "kind": "collectionType",
  "collectionName": "newsletters",
  "info": {
    "singularName": "newsletter",
    "pluralName": "newsletters",
    "displayName": "Newsletter"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },
    "content-type-builder": {
      "visible": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "subject": {
      "type": "string",
      "required": true
    },
    "docStatus": {
      "type": "enumeration",
      "default": "draft",
      "enum": [
        "draft",
        "sent"
      ]
    },
    "sentAt": {
      "type": "datetime"
    },
    "content": {
      "type": "richtext",
      "required": true
    }
  }
}
